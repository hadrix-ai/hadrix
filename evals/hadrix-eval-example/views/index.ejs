<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | Hadrix Journal</title>
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="brand">Hadrix Journal</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/profile?user=maria">Profile</a>
      </nav>
    </header>

    <main class="container">
      <section class="hero">
        <h1>Field notes from a small product team</h1>
        <p>Simple posts, tiny experiments, and a little craft.</p>
      </section>

      <section class="search-card">
        <form action="/search" method="get" class="search-form">
          <input
            type="text"
            name="q"
            placeholder="Search by title"
            aria-label="Search"
          />
          <button type="submit">Search</button>
        </form>
      </section>

      <section class="post-list">
        <% posts.forEach((post) => { %>
        <article class="post">
          <h2><a href="/posts/<%= post.id %>"><%= post.title %></a></h2>
          <p class="meta">Published <%= post.created_at %></p>
          <p><%= post.preview %></p>
        </article>
        <% }) %>
      </section>
    </main>

    <footer class="site-footer">Built for demos.</footer>
    <script src="/app.js"></script>
  </body>
</html>
