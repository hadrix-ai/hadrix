{
  "name": "hadrix",
  "version": "0.8.0",
  "description": "Hadrix open source CLI",
  "license": "Apache-2.0",
  "type": "module",
  "bin": {
    "hadrix": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
