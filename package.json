    "@typescript-eslint/parser": "^7.18.0",
    "adm-zip": "^0.5.12",
    "better-sqlite3": "^9.4.0",
    "commander": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^2.1.0",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.1",
    "openai": "^4.0.0",
    "path-type": "^4.0.0",
    "picocolors": "^1.0.0",
    "pg": "^8.11.5",
    "tar": "^7.5.4",
    "typescript": ">=4.7.4 <5.6.0"
  },
  "optionalDependencies": {},
  "devDependencies": {
    "tsup": "^8.0.1",
    "tsx": "^4.7.0"
  }
