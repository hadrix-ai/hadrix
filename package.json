{
  "name": "hadrix",
  "version": "0.1.0",
  "description": "Hadrix open source CLI",
  "type": "module",
  "bin": {
    "hadrix": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --sourcemap",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "adm-zip": "^0.5.12",
    "better-sqlite3": "^9.4.0",
    "commander": "^11.0.0",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.1",
    "picocolors": "^1.0.0",
    "tar": "^6.2.0"
  },
  "optionalDependencies": {
    "sqlite-vec": "^0.1.7"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  }
}
