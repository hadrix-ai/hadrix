  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --sourcemap",
    "dev": "tsx src/cli.ts",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@eslint/compat": "^1.3.2",
